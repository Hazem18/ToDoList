@model MyList
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2>Edit Task "@Model.Title"</h2>
    <form method="post" action="/MyList/Edit" id="taskForm" class="needs-validation" novalidate>
        <input type="hidden" class="form-control" id="title" name="Id" value="@Model.Id" required>
        <!-- Title Field -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="Title" value="@Model.Title" required>
            <div class="invalid-feedback">
                Please enter the task title.
            </div>
        </div>

        <!-- Description Field -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input class="form-control" id="description" name="Description" value="@Model.Description" rows="3" required>
            <div class="invalid-feedback">
                Please enter the task description.
            </div>
        </div>

        <!-- Deadline Field -->
        <div class="mb-3">
            <label for="deadline" class="form-label">Deadline</label>
            <input type="date" class="form-control" id="deadline" name="Deadline" value="@Model.Deadline" required>
            <div class="invalid-feedback">
                Please select a deadline.
            </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Edit Task</button>
    </form>
</div>

<script>
    // Bootstrap validation for required fields
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
    })();
</script>
